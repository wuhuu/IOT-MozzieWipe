<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="is439.sis.mozziewipe.CameraFragment">

    <ImageView
        android:id="@+id/swordImage"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:paddingTop="28dp"
        app:srcCompat="@drawable/sword" />

    <ProgressBar
        android:id="@+id/waitingImage"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/displayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="10dp"
        android:text="Help fight against mosquito by taking a photo of the mosquito bite! "
        android:textAlignment="center"
        android:textColor="@color/bb_darkBackgroundColor"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:textAlignment="center"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:layout_weight="0.34"
        android:elevation="0dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/button_capture"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="103dp"
            android:layout_weight="0.08"
            android:background="@drawable/camera"
            android:elevation="1dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/captureText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Take picture"
        android:textAlignment="center"
        android:textSize="18sp" />

</LinearLayout>