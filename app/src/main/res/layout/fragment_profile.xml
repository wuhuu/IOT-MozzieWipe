<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iot.mozziewipe.ProfileFragment"
    android:weightSum="1"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="273dp"
        app:srcCompat="@drawable/lvl1"
        android:layout_row="0"
        android:layout_column="0"
        android:paddingTop="24dp"
        android:id="@+id/imageProfilePic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:id="@+id/textViewDisplayName"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="24sp"
        android:paddingTop="15dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.48"
            android:weightSum="1">

            <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@drawable/trophy"
                android:id="@+id/imageTrophy"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_weight="0.01"
                android:layout_height="80dp" />

            <TextView
                android:text="@string/point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textAppearance="@android:style/TextAppearance.Material"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewPoint"
                android:textAppearance="@android:style/TextAppearance.Material"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:paddingTop="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.48"
            android:weightSum="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:srcCompat="@drawable/flame"
                android:id="@+id/imageFlame"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_weight="0.01" />


            <TextView
                android:text="@string/energy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textAppearance="@android:style/TextAppearance.Material"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewEnergy"
                android:textAppearance="@android:style/TextAppearance.Material"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textSize="18sp"
                android:paddingTop="20dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
