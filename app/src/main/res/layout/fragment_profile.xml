<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="is439.iot.mozziewipe.ProfileFragment">

    <ImageView
        android:id="@+id/imageProfilePic"
        android:layout_width="match_parent"
        android:layout_height="273dp"
        android:layout_column="0"
        android:layout_row="0"
        android:paddingTop="20dp"
        app:srcCompat="@drawable/lvl1" />

    <TextView
        android:id="@+id/textViewDisplayName"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:paddingTop="8dp"
        android:textAlignment="center"
        android:textColor="@color/bb_darkBackgroundColor"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewLevel"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:paddingTop="4dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/bb_darkBackgroundColor"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.48"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imageTrophy"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_column="0"
                android:layout_row="4"
                android:layout_weight="0.01"
                app:srcCompat="@drawable/trophy" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/point"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/bb_darkBackgroundColor"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewPoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="18dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.48"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imageFlame"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_column="0"
                android:layout_row="4"
                android:layout_weight="0.01"
                app:srcCompat="@drawable/flame" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/energy"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/bb_darkBackgroundColor"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewEnergy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingTop="18dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
